<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>Conference_Site__c</field>
        <field>City__c</field>
        <field>State__c</field>
        <field>Zip_code__c</field>
        <field>Owner</field>
        <field>EA_Total_Estimated_Expenses__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>EA_Approval_Request_has_been_moved_to_the_next_level</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Move_Approval_Step_to_HSSO</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Supervisor__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Allows Event Coordinator to pick their approver</description>
        <label>Supevisor Approval</label>
        <name>Supevisor_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>HSSO__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Allows last user to pick the next approver</description>
        <label>HSSO Approval</label>
        <name>HSSO_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Event Approval process for Internal Management Meeting with 6 or less participants and under $10,000 expenses and for Award Ceremony (With Cost) with $100 or less expenses</description>
    <emailTemplate>Event_Approval_Email_Templates/Event_Approval_Request_HTML</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>2 AND ((1 AND 3) OR (4 AND 5))</booleanFilter>
        <criteriaItems>
            <field>Event_Approval__c.RecordType</field>
            <operation>equals</operation>
            <value>Internal Management Meeting</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event_Approval__c.EA_Stage__c</field>
            <operation>equals</operation>
            <value>In Progress,New</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event_Approval__c.EA_Total_Estimated_Expenses__c</field>
            <operation>lessOrEqual</operation>
            <value>10000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event_Approval__c.RecordType</field>
            <operation>equals</operation>
            <value>Awards Ceremony (With Cost)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event_Approval__c.EA_Total_Estimated_Expenses__c</field>
            <operation>lessOrEqual</operation>
            <value>100</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>EA_Event_Approval_Request_has_been_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Move_Approval_Step_to_None</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Move_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>EA_Event_Approval_Record_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Final_Rejection</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Move_Approval_Step_to_None</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Event_Approval_Submission_Confirmation</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Move_Approval_Step_to_Supervisor</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Move_to_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Event Approval - Internal Mgmt 1</label>
    <recallActions>
        <action>
            <name>Move_Approval_Step_to_None</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Move_to_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
