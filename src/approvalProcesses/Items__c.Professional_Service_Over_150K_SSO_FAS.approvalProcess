    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Spend_Tracker_Item_Status_Under_SRB_Rev</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Spend_Tracker_FAS_Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Items__c.Total_Cost__c</field>
                <operation>greaterOrEqual</operation>
                <value>150000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>FAS Approval</label>
        <name>FAS_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Spend_Tracker_Spend_Review_Brd_Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>SRB Approval</label>
        <name>SRB_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for approving Professional Items (SSO FAS) of Spend Tracker application.</description>
    <emailTemplate>Spend_Request_Email_Templates/Spend_Tracker_Item_Approvers_Review_Required</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Items__c.RecordType</field>
            <operation>equals</operation>
            <value>Professional Services Item</value>
        </criteriaItems>
        <criteriaItems>
            <field>Spend_Request__c.Total_Planned_Cost__c</field>
