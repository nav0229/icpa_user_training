            <value>150000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Spend_Request__c.Service_Staff_Office__c</field>
            <operation>equals</operation>
            <value>Q - Federal Acquisition Service</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Spend_Tracker_Item_Approval_Request_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Spend_Tracker_Item_Clear_Deny_Appr_Item</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Spend_Tracker_Item_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
