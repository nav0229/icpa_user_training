    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>EA_Approval_Request_has_been_moved_to_the_next_level</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Event_Tracker_Deputy_Administrator</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Sends all internal management meetings to the deputy admin (Less than 100k) if greater than 100k the Deputy Admin will get the request anyway.</description>
        <entryCriteria>
            <booleanFilter>1 AND 2</booleanFilter>
            <criteriaItems>
                <field>Event_Approval__c.RecordType</field>
                <operation>equals</operation>
                <value>Internal Management Meeting</value>
            </criteriaItems>
            <criteriaItems>
                <field>Event_Approval__c.EA_Total_Estimated_Expenses__c</field>
                <operation>lessThan</operation>
                <value>100000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Internal Management Meeting</label>
        <name>Internal_Management_Meeting</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
