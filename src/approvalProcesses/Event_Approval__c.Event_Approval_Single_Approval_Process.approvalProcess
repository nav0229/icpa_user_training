                <field>Event_Approval__c.EA_Total_Estimated_Expenses__c</field>
                <operation>greaterOrEqual</operation>
                <value>100000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Event_Approval__c.EA_Stage__c</field>
                <operation>equals</operation>
