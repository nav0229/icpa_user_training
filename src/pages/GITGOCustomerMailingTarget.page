<apex:page standardController="Target__c" extensions="GITGOTargetExtension" standardStylesheets="true">
<!--
    Original Code and Extention Created by: Greg Hacic, 4/7/2009, http://www.interactiveties.com/contact.php
    Code Modified by: Jeffrey Mattes, 2/10/2012, http://http://www.catapulttechnology.com
    Modifications: 
    (1)Modified query in controler extention to pull data from non-standard object
    (2)Added Sets in controller to pull unique list values
    (3)Customized code for GSA Customer Mailing Directory objects and relationships
    Last Update Date: 2/15/20112  
-->
   <!--  <apex:sectionHeader title="Customer Mailing Target" subtitle="{!Target__c.Name}" help="/help/doc/user_ed.jsp?loc=help"></apex:sectionHeader> -->
    <apex:form >
        <apex:pageBlock title="Hello {!$User.FirstName} {!$User.LastName}">
            <apex:pageMessages />
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"></apex:commandButton>
                <apex:commandButton action="{!cancel}" value="Cancel"></apex:commandButton>                
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Please select the attributes that describe this customer mailing target." columns="2">
                <apex:inputField value="{!Target__c.Team__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.Product__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.Name}"></apex:inputField>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Please select the filters that will be applied to this customer mailing target." columns="2" >
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Organization" for="org"></apex:outputLabel>
                    <apex:selectList id="org" value="{!Target__c.Organization__c}" size="1" title="Organization">
                        <apex:selectOptions value="{!orgs}"></apex:selectOptions>
                    </apex:selectList>
                </apex:pageBlockSectionItem>
                <apex:inputField value="{!Target__c.Region__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.Work_Location__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.Affiliation__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.Street__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.City__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.State__c}"></apex:inputField>
                <apex:inputField value="{!Target__c.Physical_Region__c}"></apex:inputField>
             </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>